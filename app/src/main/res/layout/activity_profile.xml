<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:background="#e9e7e5"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <android.support.design.widget.CoordinatorLayout
            android:id="@+id/profilelayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_margin="20dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profilePic"
                android:layout_width="200dp"
                android:src="@drawable/kohli"
                android:layout_gravity="center_horizontal"
                android:layout_height="200dp" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/changePic"
                app:fabSize="normal"
                app:layout_anchor="@id/profilePic"
                app:layout_anchorGravity="bottom|end"
                android:src="@drawable/ic_camera_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </android.support.design.widget.CoordinatorLayout>

        <android.support.v7.widget.CardView
            app:cardUseCompatPadding="true"
            android:id="@+id/namelayout"
            android:layout_below="@id/profilelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:padding="10dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:gravity="center_vertical"
                    android:id="@+id/name"
                    tools:text="Virat kohli"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:layout_width="0dp"
                    android:layout_weight=".9"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/changeName"
                    android:layout_width="0dp"
                    android:layout_weight=".1"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:minHeight="20dp"
                    android:tint="@color/colorPrimary"
                    app:srcCompat="@drawable/ic_edit"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            app:cardUseCompatPadding="true"
            android:layout_below="@id/namelayout"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:padding="10dp"
                    android:textColor="@color/colorPrimary"
                    android:text="About and Phone Number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:id="@+id/status"
                    tools:text="Virat kohli"
                    android:textColor="#000"
                    android:padding="10dp"
                    android:textSize="18sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <View
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#e9e7e5"
                    />

                <TextView
                    android:gravity="center_vertical"
                    android:id="@+id/phone"
                    tools:text="+91 7042856750"
                    android:textColor="#000"
                    android:padding="10dp"
                    android:textSize="18sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </android.support.v7.widget.CardView>
    </RelativeLayout>

</ScrollView>